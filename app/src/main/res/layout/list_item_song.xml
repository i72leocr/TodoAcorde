<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="8dp"
    android:layout_marginHorizontal="16dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp"
    app:cardUseCompatPadding="true"
    app:cardPreventCornerOverlap="false"
    android:fontFamily="sans-serif">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp">

        <!-- Título -->
        <TextView
            android:id="@+id/song_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Nombre de la canción"
            android:textSize="16sp"
            android:textColor="?attr/colorOnSurface"
            android:fontFamily="sans-serif"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/info_container"
            app:layout_constraintHorizontal_bias="0" />

        <!-- Autor -->
        <TextView
            android:id="@+id/song_author"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Autor de la canción"
            android:textSize="14sp"
            android:textColor="?attr/colorOnSurface"
            android:fontFamily="sans-serif"
            android:textStyle="normal"
            android:layout_marginTop="4dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/song_title"
            app:layout_constraintEnd_toStartOf="@+id/info_container"
            app:layout_constraintHorizontal_bias="0" />

        <!-- Contenedor de info -->
        <LinearLayout
            android:id="@+id/info_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="end"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/song_author">

            <!-- Dificultad -->
            <TextView
                android:id="@+id/song_difficulty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dif: Medio"
                android:textSize="12sp"
                android:textColor="?attr/colorPrimary"
                android:fontFamily="sans-serif"
                android:textStyle="normal"
                android:layout_marginBottom="6dp" />

            <!-- Favorito -->
            <ImageButton
                android:id="@+id/song_favorite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/heart_regular_full"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:tint="?attr/colorPrimary"
                android:contentDescription="Marcar favorito" />
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>

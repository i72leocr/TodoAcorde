<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Pestañas -->
    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tabLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:tabIndicatorColor="@color/black"
        app:tabSelectedTextColor="@color/black"
        app:tabTextColor="@android:color/darker_gray"
        android:layout_marginBottom="12dp"/>
    <!-- Estadísticas generales -->
    <ScrollView
        android:id="@+id/generalStatsLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="16dp"
        android:paddingBottom="100dp"
        android:clipToPadding="false">

        <!-- Único hijo directo del ScrollView -->
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Tarjetas resumen adicionales -->
            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="2"
                android:layout_marginBottom="16dp">

                <!-- Total sesiones globales -->
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_margin="4dp"
                    android:padding="8dp"
                    android:background="@drawable/card_background">
                    <TextView
                        android:text="Total sesiones"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/tvTotalSessionsGlobal"
                        android:text="0"
                        android:textSize="18sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

                <!-- Tarjeta Score total -->
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_margin="4dp"
                    android:padding="8dp"
                    android:gravity="center"
                    android:background="@drawable/card_background">
                    <TextView
                        android:text="Score total"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/tvScoreTotalCard"
                        android:text="0 / Y"
                        android:textSize="18sp"
                        android:layout_marginTop="8dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </GridLayout>

            <!-- Selector único Top 10 -->
            <Spinner
                android:id="@+id/spinnerTopStats"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:entries="@array/top10Options"
                android:layout_marginTop="16dp"
                android:popupBackground="@drawable/spinner_dropdown_bg"/>

            <!-- Contenedor de filas Top 10 -->
            <LinearLayout
                android:id="@+id/top10Table"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="8dp"/>
        </LinearLayout>
    </ScrollView>
    <!-- Estadísticas por canción -->
        <LinearLayout
        android:id="@+id/songStatsLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:visibility="gone">

        <!-- Parte superior fija con scroll -->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fillViewport="true">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp">

                <!-- Spinners -->
                <!-- Spinner de canción, centrado y destacado -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_horizontal">

                    <Spinner
                        android:id="@+id/spinnerSong"
                        android:layout_width="wrap_content"
                        android:gravity="center"
                        android:layout_height="wrap_content"
                        android:background="@drawable/spinner_highlight_with_arrow"
                        android:layout_marginBottom="8dp"
                        android:spinnerMode="dropdown"
                        android:paddingRight="25dp"
                        android:popupBackground="@drawable/spinner_dropdown_bg"
                        />
                </LinearLayout>




                <!-- Spinner de filtro de fecha, ancho mínimo acorde al texto más largo -->
                <Spinner
                    android:id="@+id/spinnerDateFilterSong"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minWidth="130dp"
                    android:paddingEnd="8dp"
                    android:paddingStart="8dp"
                    android:layout_marginBottom="16dp"/>

                <!-- Tarjetas resumen -->
                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:columnCount="2"
                    android:layout_marginBottom="16dp">

                    <!-- Tarjeta genérica reutilizable -->
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:layout_margin="4dp"
                        android:padding="8dp"
                        android:background="@drawable/card_background">
                        <TextView
                            android:text="Sesiones"
                            android:textStyle="bold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:id="@+id/tvTotalSessionsCard"
                            android:text="0"
                            android:textSize="18sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:layout_margin="4dp"
                        android:padding="8dp"
                        android:background="@drawable/card_background">
                        <TextView
                            android:text="Avg Score"
                            android:textStyle="bold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:id="@+id/tvAvgScoreCard"
                            android:text="0%"
                            android:textSize="18sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:layout_margin="4dp"
                        android:padding="8dp"
                        android:background="@drawable/card_background">
                        <TextView
                            android:text="Máx Score"
                            android:textStyle="bold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:id="@+id/tvMaxScoreCard"
                            android:text="0%"
                            android:textSize="18sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:layout_margin="4dp"
                        android:padding="8dp"
                        android:background="@drawable/card_background">
                        <TextView
                            android:text="Mín Score"
                            android:textStyle="bold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:id="@+id/tvMinScoreCard"
                            android:text="0%"
                            android:textSize="18sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                </GridLayout>

                <!-- Spinner KPI -->
                <Spinner
                    android:id="@+id/spinnerKpi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_gravity="start"/>

                <!-- Gráficas normales -->
                <com.github.mikephil.charting.charts.PieChart
                    android:id="@+id/chartPie"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:layout_marginTop="16dp"
                    android:visibility="gone"/>

                <!-- Sección Top 3 acertados/fallados: lado a lado -->
                <LinearLayout
                    android:id="@+id/topChordsLayout"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:gravity="center"
                    android:paddingBottom="16dp">

                    <com.github.mikephil.charting.charts.PieChart
                        android:id="@+id/chartTopSuccess"
                        android:layout_width="0dp"
                        android:layout_height="220dp"
                        android:layout_weight="1"
                        android:layout_marginEnd="8dp"
                        android:visibility="gone" />

                    <com.github.mikephil.charting.charts.PieChart
                        android:id="@+id/chartTopFailed"
                        android:layout_width="0dp"
                        android:layout_height="220dp"
                        android:layout_weight="1"
                        android:layout_marginStart="8dp"
                        android:visibility="gone" />
                </LinearLayout>

                <com.github.mikephil.charting.charts.LineChart
                    android:id="@+id/chartLine"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:layout_marginTop="16dp"
                    android:visibility="gone"/>

                <com.github.mikephil.charting.charts.BarChart
                    android:id="@+id/chartRange"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:layout_marginTop="16dp"
                    android:visibility="gone"/>
            </LinearLayout>
        </ScrollView>

        <!-- Sección exclusiva para Mejor Sesión (dos gráficos adaptables) -->
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:padding="16dp"
            android:visibility="gone"
            android:id="@+id/bestSessionLayout">

            <com.github.mikephil.charting.charts.HorizontalBarChart
                android:id="@+id/chartBestSession"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginBottom="8dp"
                android:visibility="gone"/>

            <com.github.mikephil.charting.charts.PieChart
                android:id="@+id/chartBestSessionPie"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:visibility="gone"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>


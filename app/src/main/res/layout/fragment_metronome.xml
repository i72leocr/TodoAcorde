<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:fontFamily="sans-serif">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarMetronome"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/tvBpm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="100 BPM"
        android:textSize="32sp"
        android:fontFamily="sans-serif"
        android:textStyle="bold"
        android:textColor="?android:attr/textColorPrimary"
        app:layout_constraintTop_toBottomOf="@id/toolbarMetronome"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp" />

    <ImageButton
        android:id="@+id/btnDecrease"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:src="@drawable/ic_remove_circle_outline_24"
        android:tint="?attr/colorPrimary"
        android:background="?attr/selectableItemBackgroundBorderless"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvBpm"
        android:layout_marginTop="24dp"
        android:contentDescription="Disminuir BPM" />

    <SeekBar
        android:id="@+id/seekBarBpm"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:max="218"
        android:progress="100"
        android:splitTrack="false"
        android:thumbTint="?attr/colorPrimary"
        android:progressTint="?attr/colorPrimary"
        app:layout_constraintTop_toTopOf="@id/btnDecrease"
        app:layout_constraintBottom_toBottomOf="@id/btnDecrease"
        app:layout_constraintStart_toEndOf="@id/btnDecrease"
        app:layout_constraintEnd_toStartOf="@id/btnIncrease" />

    <ImageButton
        android:id="@+id/btnIncrease"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:src="@drawable/ic_add_circle_outline_24"
        android:tint="?attr/colorPrimary"
        android:background="?attr/selectableItemBackgroundBorderless"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/btnDecrease"
        android:contentDescription="Aumentar BPM" />

    <!-- Carrusel fijo 5 slots + flechas -->
    <LinearLayout
        android:id="@+id/beatCarouselRow"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@id/btnDecrease"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/btnBeatPrev"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:gravity="center"
            android:text="‹"
            android:textSize="22sp"
            android:textColor="?attr/colorPrimary"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:focusable="true"
            android:contentDescription="Anterior" />

        <LinearLayout
            android:id="@+id/beatCarousel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:foregroundGravity="center"
                android:padding="4dp">
                <TextView
                    android:id="@+id/tvBeatSlot1"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:gravity="center"
                    android:text="1"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="?android:attr/textColorPrimary"
                    android:background="@drawable/circle_unfilled"/>
            </FrameLayout>

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:foregroundGravity="center"
                android:padding="4dp">
                <TextView
                    android:id="@+id/tvBeatSlot2"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:gravity="center"
                    android:text="2"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="?android:attr/textColorPrimary"
                    android:background="@drawable/circle_unfilled"/>
            </FrameLayout>

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:foregroundGravity="center"
                android:padding="4dp">
                <TextView
                    android:id="@+id/tvBeatSlot3"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:gravity="center"
                    android:text="3"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="?android:attr/textColorPrimary"
                    android:background="@drawable/circle_unfilled"/>
            </FrameLayout>

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:foregroundGravity="center"
                android:padding="4dp">
                <TextView
                    android:id="@+id/tvBeatSlot4"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:gravity="center"
                    android:text="4"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="?android:attr/textColorPrimary"
                    android:background="@drawable/circle_unfilled"/>
            </FrameLayout>

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:foregroundGravity="center"
                android:padding="4dp">
                <TextView
                    android:id="@+id/tvBeatSlot5"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:gravity="center"
                    android:text="5"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="?android:attr/textColorPrimary"
                    android:background="@drawable/circle_unfilled"/>
            </FrameLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/btnBeatNext"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:gravity="center"
            android:text="›"
            android:textSize="22sp"
            android:textColor="?attr/colorPrimary"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:focusable="true"
            android:contentDescription="Siguiente" />
    </LinearLayout>

    <com.google.android.material.switchmaterial.SwitchMaterial
        android:id="@+id/switchAccentFirst"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Marcar primer tiempo"
        android:checked="true"
        android:fontFamily="sans-serif-medium"
        android:thumbTint="?attr/colorPrimary"
        android:trackTint="?attr/colorPrimary"
        app:layout_constraintTop_toBottomOf="@id/beatCarouselRow"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="24dp" />

    <LinearLayout
        android:id="@+id/beatIndicators"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@id/switchAccentFirst"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageButton
        android:id="@+id/btnStartStop"
        android:layout_width="97dp"
        android:layout_height="93dp"
        android:layout_marginTop="128dp"
        android:adjustViewBounds="true"
        android:background="@android:color/transparent"
        android:scaleType="centerInside"
        android:src="@drawable/ic_play_24"
        android:tint="?attr/colorPrimary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/beatIndicators"
        android:contentDescription="Start/Stop" />
</androidx.constraintlayout.widget.ConstraintLayout>
